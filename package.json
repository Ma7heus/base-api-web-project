{
  "name": "base-app-project",
  "author": "",
  "license": "ISC",
  "version": "1.0.0",
  "description": "Monorepo with Angular frontend and NestJS backend",
  "main": "index.js",
  "scripts": {
    "start:backend": "cd backend && npm run start:dev",
    "start:frontend": "cd frontend && npm start",
    "start:both": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:both": "npm run build:backend && npm run build:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:both": "npm run test:backend && npm run test:frontend",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:all": "npm run install:backend && npm run install:frontend"
  },
  "keywords": [],
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
